<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shape_color"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_navHeader_main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_shape_color" />

    <TextView
        android:id="@+id/tv_navHeader_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamed"
        android:layout_margin="8dp"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/img_navHeader_main"
        app:layout_constraintTop_toBottomOf="@+id/img_navHeader_main" />

    <TextView
        android:id="@+id/tv_navHeader_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="108dp"
        android:text="Hamed@gmail.com"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/img_navHeader_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_navHeader_username" />

</androidx.constraintlayout.widget.ConstraintLayout>